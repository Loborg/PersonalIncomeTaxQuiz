<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.personalincometaxquiz.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_image_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_navigate_before_black_48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/quiz_title_01"
                android:textColor="@android:color/black"
              android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/next_image_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/ic_navigate_next_black_48dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/quiz_question_01"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/quiz_answers_margin_padding"
            android:textSize="18dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/prompt_text">
                <CheckBox
                    android:id="@+id/quiz_01_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_01_answer_a"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="@dimen/quiz_answers_margin_padding"
                    android:paddingLeft="@dimen/quiz_answers_margin_padding" />

                <CheckBox
                    android:id="@+id/quiz_01_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_01_answer_b"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@id/quiz_01_answer_a"
                    android:layout_marginLeft="@dimen/quiz_answers_margin_padding"
                    android:layout_marginRight="@dimen/quiz_answers_margin_padding"
                    android:layout_marginBottom="@dimen/quiz_answers_margin_padding"
                    android:paddingLeft="@dimen/quiz_answers_margin_padding"/>

                <CheckBox
                    android:id="@+id/quiz_01_answer_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_01_answer_c"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_below="@id/quiz_01_answer_b"
                    android:layout_marginLeft="@dimen/quiz_answers_margin_padding"
                    android:layout_marginRight="@dimen/quiz_answers_margin_padding"
                    android:layout_marginBottom="@dimen/quiz_answers_margin_padding"
                    android:paddingLeft="@dimen/quiz_answers_margin_padding"/>
            </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/common_prompt_message"
            android:layout_alignParentBottom="true"
            android:textSize="10sp"
            android:layout_margin="@dimen/quiz_answers_margin_padding"/>
    </RelativeLayout>
</LinearLayout>
